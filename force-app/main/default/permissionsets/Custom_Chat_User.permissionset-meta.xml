<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <label>Custom Chat User</label>
    <hasActivationRequired>false</hasActivationRequired>

    <!-- Apex access for LWC controller -->
    <classAccesses>
        <apexClass>ChatMessageController</apexClass>
        <enabled>true</enabled>
    </classAccesses>

    <!-- Object permissions -->
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>false</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <object>ChatThread__c</object>
        <viewAllRecords>false</viewAllRecords>
    </objectPermissions>
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>false</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <object>ChatMessage__c</object>
        <viewAllRecords>false</viewAllRecords>
    </objectPermissions>

    <!-- Field permissions: ChatThread__c -->
    <fieldPermissions>
        <editable>true</editable>
        <field>ChatThread__c.Name</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>ChatThread__c.Description__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>ChatThread__c.Status__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>ChatThread__c.ExternalThreadId__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>ChatThread__c.RelatedRecordId__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>ChatThread__c.RelatedObjectType__c</field>
        <readable>true</readable>
    </fieldPermissions>

    <!-- Field permissions: ChatMessage__c -->
    <fieldPermissions>
        <editable>true</editable>
        <field>ChatMessage__c.Body__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <!-- Omit FLS for master-detail field ChatMessage__c.Thread__c -->
    <fieldPermissions>
        <editable>true</editable>
        <field>ChatMessage__c.PostedBy__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>ChatMessage__c.PostedAt__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>false</editable>
        <field>ChatMessage__c.ExternalMessageId__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>false</editable>
        <field>ChatMessage__c.SyncStatus__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>false</editable>
        <field>ChatMessage__c.ErrorMessage__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>ChatMessage__c.ReplyTo__c</field>
        <readable>true</readable>
    </fieldPermissions>

    <!-- Tab visibility -->
    <tabSettings>
        <tab>Chat_Workspace</tab>
        <visibility>Visible</visibility>
    </tabSettings>
    <tabSettings>
        <tab>ChatThread__c</tab>
        <visibility>Available</visibility>
    </tabSettings>
    <tabSettings>
        <tab>ChatMessage__c</tab>
        <visibility>Available</visibility>
    </tabSettings>
</PermissionSet>
