<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <label>GNT_Custom_Chat_User</label>
    <hasActivationRequired>false</hasActivationRequired>

    <!-- Apex access for LWC controller -->
    <classAccesses>
        <apexClass>GNT_ChatMessageController</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>GNT_ChatOutboundService</apexClass>
        <enabled>true</enabled>
    </classAccesses>

    <!-- Object permissions -->
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>false</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <object>GNT_ChatThread__c</object>
        <viewAllRecords>false</viewAllRecords>
    </objectPermissions>
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>false</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <object>GNT_ChatMessage__c</object>
        <viewAllRecords>false</viewAllRecords>
    </objectPermissions>

    <!-- Field permissions: GNT_ChatThread__c -->
    <fieldPermissions>
        <editable>true</editable>
        <field>GNT_ChatThread__c.Name</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>GNT_ChatThread__c.GNT_Status__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>GNT_ChatThread__c.GNT_RelatedRecordId__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>GNT_ChatThread__c.GNT_RelatedObjectType__c</field>
        <readable>true</readable>
    </fieldPermissions>

    <!-- Field permissions: GNT_ChatMessage__c -->
    <fieldPermissions>
        <editable>true</editable>
        <field>GNT_ChatMessage__c.GNT_Body__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <!-- Omit FLS for master-detail field GNT_ChatMessage__c.GNT_Thread__c -->
    <fieldPermissions>
        <editable>true</editable>
        <field>GNT_ChatMessage__c.GNT_PostedBy__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>GNT_ChatMessage__c.GNT_PostedAt__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>false</editable>
        <field>GNT_ChatMessage__c.GNT_ExternalMessageId__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>false</editable>
        <field>GNT_ChatMessage__c.GNT_SyncStatus__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>false</editable>
        <field>GNT_ChatMessage__c.GNT_ErrorMessage__c</field>
        <readable>true</readable>
    </fieldPermissions>


    <!-- Tab visibility -->
    <tabSettings>
        <tab>GNT_Chat_Workspace</tab>
        <visibility>Visible</visibility>
    </tabSettings>
    <!-- GNT_ChatThread__c / GNT_ChatMessage__c tabs are not defined; omit tab settings -->
</PermissionSet>
